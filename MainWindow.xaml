<Window x:Class="Biblioteca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteca"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1100">
    <Grid>
        <Label Content="LIBRI DISPONIBILI" HorizontalAlignment="Left" Height="53" Margin="10,10,0,0" VerticalAlignment="Top" Width="213" FontWeight="Bold"/>
        <ListBox x:Name="lstLibriBiblioteca" HorizontalAlignment="Left" Height="602" Margin="5,49,0,0" VerticalAlignment="Top" Width="230"/>
        <Button x:Name="btnAggiungiLibro" Content="AGGIUNGI LIBRO" HorizontalAlignment="Left" Height="53" Margin="644,416,0,0" VerticalAlignment="Top" Width="138" Click="btnAggiungiLibro_Click"/>
        <Button x:Name="btnRicercaLibroDaTitolo" Content="RICERCA LIBRO DA TITOLO" HorizontalAlignment="Left" Height="66" Margin="607,125,0,0" VerticalAlignment="Top" Width="175" IsEnabled="False" Click="btnRicercaLibroDaTitolo_Click"/>
        <TextBox x:Name="txtTitolo" HorizontalAlignment="Left" Height="43" Margin="265,136,0,0" TextWrapping="Wrap" Text="TITOLO" VerticalAlignment="Top" Width="313" TextChanged="txtTitolo_TextChanged"/>
        <ListBox x:Name="lstLibri" HorizontalAlignment="Left" Height="623" Margin="818,28,0,0" VerticalAlignment="Top" Width="223"/>
        <Button x:Name="btnRicercaLibriAutore" Content="RICERCA LIBRI AUTORE" HorizontalAlignment="Left" Height="64" Margin="607,262,0,0" VerticalAlignment="Top" Width="175" IsEnabled="False" Click="btnRicercaLibriAutore_Click"/>
        <TextBox x:Name="txtAutore" HorizontalAlignment="Left" Height="53" Margin="265,262,0,0" TextWrapping="Wrap" Text="AUTORE" VerticalAlignment="Top" Width="313" TextChanged="txtAutore_TextChanged"/>
        <Button x:Name="btnCalcolaNumeroLibri" Content="CALCOLA NUMERO LIBRI" HorizontalAlignment="Left" Height="53" Margin="542,49,0,0" VerticalAlignment="Top" Width="149" Click="btnCalcolaNumeroLibri_Click"/>
        <TextBox x:Name="txtLibro" HorizontalAlignment="Left" Height="41" Margin="301,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="439" IsEnabled="False"/>
        <TextBox x:Name="txtAutoreLibro" HorizontalAlignment="Left" Height="53" Margin="280,452,0,0" TextWrapping="Wrap" Text="AUTORE LIBRO DA AGGIUNGERE" VerticalAlignment="Top" Width="298"/>
        <TextBox x:Name="txtEditore" HorizontalAlignment="Left" Height="53" Margin="280,524,0,0" TextWrapping="Wrap" Text="EDITORE LIBRO DA AGGIUNGERE" VerticalAlignment="Top" Width="298"/>
        <TextBox x:Name="txtNumeroPagine" HorizontalAlignment="Left" Height="53" Margin="280,582,0,0" TextWrapping="Wrap" Text="NUMERO PAGINE LIBRO DA AGGIUNGERE" VerticalAlignment="Top" Width="298"/>
        <TextBox x:Name="txtAnno" HorizontalAlignment="Left" Height="53" Margin="280,640,0,0" TextWrapping="Wrap" Text="ANNO PUBBLICAZIONE LIBRO DA AGGIUNGERE" VerticalAlignment="Top" Width="298"/>
        <TextBox x:Name="txtTitoloLibro" HorizontalAlignment="Left" Height="53" Margin="280,394,0,0" TextWrapping="Wrap" Text="TITOLO LIBRO DA AGGIUNGERE" VerticalAlignment="Top" Width="298"/>
        <Button x:Name="btnReadingTime" Content="READING TIME" HorizontalAlignment="Left" Height="53" Margin="301,49,0,0" VerticalAlignment="Top" Width="157" Click="btnReadingTime_Click"/>
        <TextBox x:Name="txtBiblioteca" HorizontalAlignment="Left" Height="34" Margin="301,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="439" IsEnabled="False"/>

    </Grid>
</Window>
